<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.testfirebasedb.activity.ProfileActivity"
    style="@style/background_style"
    android:id="@+id/profile_main_view">
    <RelativeLayout
        android:background="@color/green"
        style="@style/header_style">

        <TextView
            style="@style/header_text"
            android:textSize="25dp"

            android:text = "@string/profile">
        </TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <ImageButton
                style="@style/header_button"
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:id="@+id/btn_log_out"
                android:src="@drawable/ic_log_out">
            </ImageButton>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out">
            </TextView>
        </LinearLayout>
        <!--        <Button-->
        <!--            android:id="@+id/from_profile_to_menu"-->
        <!--            style="@style/header_button"-->
        <!--            android:text="@string/to_menu"></Button>-->
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_table_layout">
                <TableRow
                    style="@style/table_row_profile_style">
                    <TextView
                        android:text="@string/sex"
                        android:textColor="@color/black"
                        style="@style/first_text_in_row_profile_style"/>
                    <RadioGroup
                        android:orientation="horizontal"
                        android:id="@+id/profile_radio_group">
                        <RadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/male"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:id="@+id/profile_man_radio_button"
                            android:onClick="onChangeButtonClick"
                            />
                        <RadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/female"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"
                            android:id="@+id/profile_woman_radio_button"
                            android:onClick="onChangeButtonClick"/>
                    </RadioGroup>
                </TableRow>
                <TableRow
                    style="@style/table_row_profile_style">
                    <TextView
                        android:text="@string/growth"
                        android:textColor="@color/black"
                        style="@style/first_text_in_row_profile_style"/>
                    <EditText
                        android:id="@+id/profile_height"
                        tools:text=""
                        android:inputType="number"
                        android:onClick="onChangeButtonClick"
                        android:textColor="@color/black"/>
                    <TextView
                        android:text="@string/centimeters"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    style="@style/table_row_profile_style">
                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/weight"
                        style="@style/first_text_in_row_profile_style"/>
                    <EditText
                        android:id="@+id/profile_weight"
                        tools:text=""
                        android:textColor="@color/black"
                        android:onClick="onChangeButtonClick"
                        style="@style/edit_text_profile_style"/>
                    <TextView
                        android:text="@string/kilograms"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    style="@style/table_row_profile_style" >
                    <TextView
                        android:text="@string/age"
                        android:textColor="@color/black"
                        style="@style/first_text_in_row_profile_style"/>
                    <EditText
                        android:id="@+id/profile_age"
                        tools:text=""
                        android:onClick="onChangeButtonClick"
                        android:textColor="@color/black"
                        style="@style/edit_text_profile_style"/>
                    <TextView
                        android:text="@string/years"
                        android:textColor="@color/black"/>
                </TableRow>
            </TableLayout>
            <TextView
                style="@style/first_text_in_row_profile_style"
                android:id="@+id/profile_optimal_kal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@id/profile_table_layout"
                android:text="@string/daily_calorie_amount"
                android:paddingTop="40dp"
                />

            <TextView
                android:id="@+id/profile_optimal_kal_number"
                style="@style/first_text_in_row_profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_optimal_kal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:text="@string/kilocalories"
                android:textStyle="bold" />
            <TextView
                style="@style/first_text_in_row_profile_style"
                android:id="@+id/profile_aim_kal"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_optimal_kal_number"
                android:text="@string/calories_goal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_aim_kal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/profile_aim_kal_number"
                    style="@style/first_text_in_row_profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:onClick="onChangeButtonClick"
                    android:textColor="@color/black"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/first_text_in_row_profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/kilocalories"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPaper"
            android:layout_width="match_parent"
            android:layout_marginBottom="80dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt"
            android:text="Swip to next day"
            android:layout_marginBottom="80dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            app:itemIconTint="@color/custom_color_bottom_navigation"
            app:itemTextColor="@color/custom_color_bottom_navigation"
            app:menu="@menu/menu_bottom_navigation"></com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>
</LinearLayout>